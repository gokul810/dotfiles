// --- KEYBINDINGS ---
keybinds {
    normal {
        // Normal mode is where you spend most of your time
    }

    shared_except "locked" {
        bind "Ctrl g" { SwitchToMode "Locked"; }
        bind "Ctrl q" { Quit; }

        // Pane Navigation: Alt + Arrow Keys
        bind "Alt Left"  { MoveFocusOrTab "Left"; }
        bind "Alt Right" { MoveFocusOrTab "Right"; }
        bind "Alt Down"  { MoveFocus "Down"; }
        bind "Alt Up"    { MoveFocus "Up"; }

        // Layout Management
        bind "Alt n" { NewPane; }
        bind "Alt f" { ToggleFloatingPanes; }
        bind "Alt w" { ToggleFocusFullscreen; } // 'w' for Wide - expands current pane

        // Tab Management
        bind "Alt i" { MoveTab "Left"; }
        bind "Alt o" { MoveTab "Right"; }
    }
}

// --- THEME & UI ---
theme "tokyo-night"
mouse_mode true
pane_frames false
simplified_ui true
default_mode "normal"
copy_on_select true
show_release_notes false
default_layout "compact"

// --- BEHAVIOR ---
on_force_close "detach" // Session stays running if you close Alacritty
scroll_buffer_size 10000
serialization_interval 10000
session_serialization true // Remembers your layout after a reboot

// --- PLUGINS ---
plugins {
    tab-bar location="zellij:tab-bar"
    status-bar location="zellij:status-bar"
    strider location="zellij:strider"
    compact-bar location="zellij:compact-bar"
    session-manager location="zellij:session-manager"
}
